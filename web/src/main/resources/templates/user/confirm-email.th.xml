<?xml version="1.0"?>
<html lang="en" xmlns:th="http://www.thymeleaf.org/">
    <thlogic>

        <attr sel="footer"
                th:replace="~{_snippets/footer :: footer}" />

        <attr sel="#title"
              th:text="#{confirm_email.title}"/>

        <attr sel="#verification_form"
              th:action="@{${T(ua.tucha.passpass.web.util.RouteRegistry$UserRouteRegistry).CONFIRM_EMAIL}}"
              th:object="${verificationTokenDTO}">

            <attr sel="#verification_token_field"
                  th:field="*{verificationToken}"
                  th:placeholder="#{confirm_email.form.placeholder.token}"
                  th:errorclass="is-invalid" />
            <attr sel="#verification_token_field_errors"
                  th:each="error: ${#fields.errors('verificationToken')}"
                  th:text="${error}"/>

        </attr>

    </thlogic>
</html>
