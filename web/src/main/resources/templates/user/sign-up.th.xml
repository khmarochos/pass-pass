<?xml version="1.0"?>
<html lang="en" xmlns:th="http://www.thymeleaf.org/">
    <thlogic>

        <attr sel="footer"
                th:replace="~{_snippets/footer :: footer}" />

        <attr sel="#title"
              th:text="#{registration.title}"/>

        <attr sel="#please_register_m1"
              th:text="#{web.resources.templates.user.sign-up.please_register_m2}"/>

        <attr sel="#please_register_m2"
              th:text="#{web.resources.templates.user.sign-up.please_register_m2}"/>

        <attr sel="#registration_form"
              th:action="@{${T(ua.tucha.passpass.web.util.RouteRegistry$UserRouteRegistry).SIGN_UP}}"
              th:object="${userDTO}">

            <attr sel="#name_field"
                  th:field="*{name}"
                  th:placeholder="#{web.resources.templates.user.sign-up.form.placeholder.name}"/>
            <attr sel="#name_field_errors"
                  th:each="error: ${#fields.errors('name')}"
                  th:text="${error}"/>

            <attr sel="#email_field"
                  th:field="*{email}"
                  th:placeholder="#{web.resources.templates.user.sign-up.form.placeholder.email}"
                  th:errorclass="is-invalid" />
            <attr sel="#email_field_errors"
                  th:each="error: ${#fields.errors('email')}"
                  th:text="${error}"/>

            <attr sel="#password_field"
                  th:field="*{password}"
                  th:placeholder="#{web.resources.templates.user.sign-up.form.placeholder.password}"
                  th:errorclass="is-invalid" />
            <attr sel="#password_field_errors"
                  th:each="error: ${#fields.errors('password')}"
                  th:text="${error}"/>

            <attr sel="#policy_acceptance_checkbox"
                  th:field="*{policyAccepted}"/>
            <attr sel="#policy_acceptance_checkbox_errors"
                  th:each="error: ${#fields.errors('policyAccepted')}"
                  th:text="${error}"/>
            <attr sel="#policy_acceptance"
                  th:text="#{web.resources.templates.user.sign-up.form.policy_acceptance}"/>

            <attr sel="button"
                  th:text="#{web.resources.templates.user.sign-up.form.submit}"/>

            <attr sel="#already_registered"
                  th:text="#{web.resources.templates.user.sign-up.form.alredy_registered}"/>

            <attr sel="#go_sign_in"
                  th:text="#{web.resources.templates.user.sign-up.form.go_sign_in}"/>

        </attr>

    </thlogic>
</html>
